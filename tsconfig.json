{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "outDir": "./lib"
  },

  "include": [
    "src/**/*.ts"
  ],

  "exclude": [
    "spec",
    "node_modules"
  ]
}
