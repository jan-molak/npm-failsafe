{
  "name": "npm-failsafe",
  "version": "0.0.0-development",
  "description": "Executes a sequence of npm scripts.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "failsafe": "bin/failsafe"
  },
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --project ./tsconfig.json --config ./tslint.json --format prose",
    "test": "mocha --opts ./mocha.opts 'spec/*.spec.ts'",
    "compile": "tsc --project tsconfig.json",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jan-molak/npm-failsafe.git"
  },
  "keywords": [
    "cli",
    "npm",
    "script",
    "scripts",
    "ci"
  ],
  "author": "Jan Molak <jan.molak@smartcodeltd.co.uk>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jan-molak/npm-failsafe/issues"
  },
  "homepage": "https://github.com/jan-molak/npm-failsafe",
  "dependencies": {},
  "engines": {
    "node": ">= 6.12.x",
    "npm": ">= 3"
  },
  "devDependencies": {
    "@types/chai": "4.1.0",
    "@types/chai-as-promised": "7.1.0",
    "@types/mocha": "2.2.46",
    "@types/node": "9.3.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "commitizen": "2.8.5",
    "cz-conventional-changelog": "1.1.7",
    "lodash": "4.17.4",
    "mocha": "4.1.0",
    "mocha-testdata": "1.2.0",
    "rimraf": "2.6.2",
    "semantic-release": "^12.2.2",
    "travis-deploy-once": "^4.3.1",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "tslint-microsoft-contrib": "5.0.2",
    "typescript": "2.9.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
